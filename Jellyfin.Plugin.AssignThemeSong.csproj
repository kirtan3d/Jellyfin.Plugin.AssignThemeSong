<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <AssemblyName>Jellyfin.Plugin.AssignThemeSong</AssemblyName>
    <RootNamespace>Jellyfin.Plugin.AssignThemeSong</RootNamespace>
    <Version>0.0.9.0</Version>
    <AssemblyVersion>0.0.9.0</AssemblyVersion>
    <FileVersion>0.0.9.0</FileVersion>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Jellyfin.Controller" Version="10.10.0">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Jellyfin.Model" Version="10.10.0">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
    <PackageReference Include="YoutubeExplode" Version="6.3.9" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Configuration\**\*" />
    <EmbeddedResource Include="images\**\*" />
    <None Include="web\**\*" CopyToOutputDirectory="PreserveNewest" />
    <None Include="meta.json" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

</Project>
