<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <AssemblyName>Jellyfin.Plugin.xThemeSong</AssemblyName>
    <RootNamespace>Jellyfin.Plugin.xThemeSong</RootNamespace>
    <Version>1.0.1.0</Version>
    <AssemblyVersion>1.0.1.0</AssemblyVersion>
    <FileVersion>1.0.1.0</FileVersion>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <PublishSingleFile>false</PublishSingleFile>
    <SelfContained>false</SelfContained>
    <IncludeNativeLibrariesForSelfExtract>false</IncludeNativeLibrariesForSelfExtract>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Jellyfin.Controller" Version="10.11.0">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Jellyfin.Model" Version="10.11.0">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
    <!-- Use latest YoutubeExplode to fix cipher issues -->
    <PackageReference Include="YoutubeExplode" Version="6.5.6" />
    
    <!-- Mark dependencies that are included with Jellyfin as PrivateAssets -->
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
    
    <!-- Don't directly reference System libraries that are used by Jellyfin -->
    <!-- They will be pulled in correctly via the YoutubeExplode dependency -->
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Configuration\**\*" />
    <EmbeddedResource Include="images\**\*" />
    <EmbeddedResource Include="web\**\*" />
    <None Include="web\**\*" CopyToOutputDirectory="PreserveNewest" />
    <None Include="meta.json" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <!-- Handle dependency conflicts by excluding assemblies that are provided by Jellyfin host -->
  <Target Name="RemoveUnnecessaryAssemblies" AfterTargets="Build">
    <ItemGroup>
      <!-- Remove ALL Jellyfin/MediaBrowser assemblies - they are provided by the host -->
      <FilesToDelete Include="$(OutputPath)Jellyfin.*.dll" />
      <FilesToDelete Include="$(OutputPath)MediaBrowser.*.dll" />
      <FilesToDelete Include="$(OutputPath)Emby.*.dll" />
      
      <!-- Remove System libraries that are loaded by the host -->
      <FilesToDelete Include="$(OutputPath)System.*.dll" />
      
      <!-- Remove Microsoft libraries that are loaded by the host -->
      <FilesToDelete Include="$(OutputPath)Microsoft.*.dll" />
      
      <!-- Remove other assemblies that conflict with Jellyfin -->
      <FilesToDelete Include="$(OutputPath)Newtonsoft.Json.dll" />
      <FilesToDelete Include="$(OutputPath)ICU4N*.dll" />
      <FilesToDelete Include="$(OutputPath)J2N.dll" />
      <FilesToDelete Include="$(OutputPath)Diacritics.dll" />
      
      <!-- Remove build artifacts -->
      <FilesToDelete Include="$(OutputPath)*.pdb" />
      <FilesToDelete Include="$(OutputPath)*.xml" />
      <FilesToDelete Include="$(OutputPath)*.runtimeconfig.json" />
    </ItemGroup>
    <Delete Files="@(FilesToDelete)" />
    
    <!-- Output message for debugging -->
    <Message Text="Removed Jellyfin host assemblies and unnecessary files" Importance="high" />
  </Target>

</Project>
